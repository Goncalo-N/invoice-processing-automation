<Window x:Class="PDFDataExtraction.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDF Monitor" Height="200" Width="300">
    <Grid Background="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Row for the buttons -->
            <RowDefinition Height="Auto"/> <!-- Row for the label -->
        </Grid.RowDefinitions>
        
        <!-- Button row -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20">
            <Button x:Name="StartPauseButton" Content="Start" Width="100" Height="30" Margin="10" Background="#4CAF50" Foreground="White" BorderThickness="0" Click="StartPauseButton_Click"/>
            <Button x:Name="ExitButton" Content="Exit" Width="100" Height="30" Margin="10" Background="#FF5722" Foreground="White" BorderThickness="0" Click="ExitButton_Click"/>
        </StackPanel>

        <!-- Label row -->
        <Label x:Name="Status" Content="Inactive" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"/>
    </Grid>
</Window>
